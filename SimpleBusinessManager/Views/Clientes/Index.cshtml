@model IEnumerable<SimpleBusinessManager.Models.Cliente>

@{
    ViewBag.Title = "Cliente";
}

@*<h2>Index</h2>*@
<br />
<br />
<p>
    @Html.ActionLink("Inserir novo cliente", "Create")
</p>
<table class="display" id="tabela">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.TelephoneLink(item.Telefone)
                </td>
                <td>
                    @Html.TelephoneLink(item.Celular)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Clientes", new { id = item.ClienteId })" class="btn btn">
                        <i class="fa fa-pencil-square-o" aria-hidden="true" title="Editar"></i>
                    </a>
                    <a href="@Url.Action("Details", "Clientes", new { id = item.ClienteId })" class="btn btn">
                        <i class="fa fa-eye" aria-hidden="true" title="Detalhes"></i>
                    </a>
                    <a href="@Url.Action("Delete", "Clientes", new { id = item.ClienteId })" class="btn btn">
                        <i class="fa fa-trash-o" aria-hidden="true" title="Apagar"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
