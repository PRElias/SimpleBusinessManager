@model IEnumerable<SimpleBusinessManager.Models.Venda>

@{
    ViewBag.Title = "Vendas";
}

@*<h2>Index</h2>*@
<br />
<br />
<p>
    @Html.ActionLink("Incluir nova venda", "Create")
</p>
<table class="display" id="tabela">
    <thead>
        <tr>
            <th>
                Pedido
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPagamento)
            </th>
            <th>
                Pago
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DataPedido))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pago)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Vendas", new { id = item.PedidoId })" class="btn btn">
                        <i class="fa fa-pencil-square-o" aria-hidden="true" title="Editar"></i>
                    </a>
                    <a href="@Url.Action("Details", "Vendas", new { id = item.PedidoId })" class="btn btn">
                        <i class="fa fa-eye" aria-hidden="true" title="Detalhes"></i>
                    </a>
                    <a href="@Url.Action("Delete", "Vendas", new { id = item.PedidoId })" class="btn btn">
                        <i class="fa fa-trash-o" aria-hidden="true" title="Apagar"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
