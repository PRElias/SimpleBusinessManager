<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SimpleBusinessManager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administração<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Vendedores", "Index", "Vendedors")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                        <li>@Html.ActionLink("Vendas", "Index", "Vendas")</li>
                        <li>@Html.ActionLink("Recebimentos", "Index", "Recebimentos")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Relatórios<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Saldo", "Index", "Saldo")</li>
                                <li>@Html.ActionLink("Total mensal por vendedor", "Index", "TotalMensalPorVendedor")</li>
                            </ul>
                        </li>
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; Paulo Roberto Elias</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jquerydatatables")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryinputmask")
    @Scripts.Render("~/Scripts/script.js")
    @*@Scripts.Render("~/bundles/fontawesome")*@
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('#Aniversario').val("");
            $('#Telefone').inputmask("(99)99999-9999");
            $('#Celular').inputmask("(99)99999-9999");
            $('#Data').inputmask("99/99/9999");
            $('#DataPedido').inputmask("99/99/9999");
            $('#Valor').inputmask("R$ 999.999,99", { removeMaskOnSubmit: true, numericInput: true });
            $('#ValorTotal').inputmask("R$ 999.999,99", { removeMaskOnSubmit: true, numericInput: true });
        });
    </script>
</body>
</html>
